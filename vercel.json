{
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm install",
  "build": {
    "env": {
      "NODE_VERSION": "18",
      "VITE_API_URL": "https://healthkonnect.onrender.com/api",
      "VITE_DEMO_MODE": "true"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}